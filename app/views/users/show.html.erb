<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<script>
  $(document).ready(function() {
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: { maxZoom: 14 }, internal: {id: 'map'}}, function(){
      
      markers_Array = []

      <% if @user.coordinates != nil %>
        markers_Array = [
        {      
          "lng": <%= @user.coordinates[0] %>,
          "lat": <%= @user.coordinates[1] %>,
          "picture": {
            "url": "http://maps.google.com/mapfiles/ms/icons/red-dot.png",
            "width":  36,
            "height": 36
          },
          "infowindow": "<%= @user.first_name %>"
        }
        ];
      <% end %>

      /* add yellow markers for contacts */
      <% @contacts.each do |contact| %>
        <%  if contact.coordinates != nil %>
          var contact_marker = {
          "lng": <%= contact.coordinates[0] %>,
          "lat": <%= contact.coordinates[1] %>,
          "picture": {
            "url": "http://maps.google.com/mapfiles/ms/icons/yellow-dot.png",
            "width":  36,
            "height": 36
          },
          "infowindow": "<%= contact.first_name %> <%= contact.last_name %>"          
          };
          markers_Array.push(contact_marker);
        <% end %>
      <% end %>

      markers = handler.addMarkers(markers_Array);

      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });  
  });  
</script>

<div class="push-info">
  <%= link_to("push my contacts", select_push_fields_path(current_user)) %>
</div>
<div class="modal">
  <label for="modal-1">
    <div class="btn js-btn">Click for Modal</div>
  </label>
  <input class="modal-state" id="modal-1" type="checkbox" />
  <div class="modal-window">
    <div class="modal-inner">
      <label class="modal-close" for="modal-1"></label>
        <h2>Please select the fields to push</h2>

        <%= form_tag(controller: "users", action: "push", method: "post") do %>
          <% @user.attributes.each do |key, value| %>
            <% unless @blacklist.include?(key) %>
              <div class="contact-field">
                <%= label_tag(:"#{key}", key.titleize, class: "label") %>
                <%= check_box_tag(:"#{key}", value=1, checked=true, class: "checkbox") %><br>
              </div>
            <% end %>
          <% end %>

          <div class="select-contacts">
            <h2>select contacts</h2>

            <div id="tag_cloud_push">
              <% if !@user.tags_with_weight.empty? %>
                <% user_tags_with_weight = @user.tags_with_weight %>
                <% max_weight = user_tags_with_weight.max_by(&:last)[1] %>
                <% user_tags_with_weight.each do |tag, weight| %>
                <%= link_to tag, user_path(@user) +"/"+ tag, class: %w{s m l}[((weight/max_weight.to_f)*3).round-1] %>
                <% end %>
              <% end %>
              <%= link_to("all", current_user.id.to_s+"/url", class: "l") %>
            </div>

            <div class="push-contacts">
            <%= render partial: "push_contact" %>
            </div>
          </div>


        <%= submit_tag "push to my contacts" %>
        <% end %>
        <label class="modal-close" for="modal-1"></label>
    </div>
  </div>
</div>



<div class="import-contacts">
  <%= form_tag(controller: "import", action: "authenticate", method: "post") do %>
  <%= submit_tag "import contacts" %>
  <% end %>
</div>


<div class="new-contacts">
  <% if @new_contacts.size > 0 %>
    <button class="new-contacts-button">new contacts</button>
    <div class="new-contact-list">      
      <% @new_contacts.each do |contact| %>

        <div class="new-contact" id="<%= contact.id %>">

          <div class="search-buttons">
            <button class="addContact" id="<%= contact.id %>">+</button>
            <button class="refuseContact" id="<%= contact.id %>">-</button>
          </div>
          
          <div class="contact-info">
            <li><%= contact.first_name %> <%= contact.last_name %> <%= contact.email %></li>
          </div>

        </div>
      <% end %>
    </div>
    <% end %>
</div>

