<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<script>
  $(document).ready(function() {
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: { maxZoom: 14 }, internal: {id: 'map'}}, function(){
      
      markers_Array = [
      {      
        "lng": <%= @user.coordinates[0] %>,
        "lat": <%= @user.coordinates[1] %>,
        "picture": {
          "url": "http://maps.google.com/mapfiles/ms/icons/red-dot.png",
          "width":  36,
          "height": 36
        },
        "infowindow": "user marker"
      }
      ];

      /* add yellow markers for contacts */
      <% @user.contacts.each do |contact| %>
        var contact_marker = {
        "lng": <%= contact.coordinates[0] %>,
        "lat": <%= contact.coordinates[1] %>,
        "picture": {
          "url": "http://maps.google.com/mapfiles/ms/icons/yellow-dot.png",
          "width":  36,
          "height": 36
        },
        "infowindow": "contact marker"          
        };
        markers_Array.push(contact_marker);
      <% end %>

      markers = handler.addMarkers(markers_Array);

      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });
  });

</script>

<p>
  <strong>Own information:</strong>
  <%= @user.first_name %>
  <%= @user.last_name %>
  <%= @user.street %>
  <%= @user.postal_code %> <%= @user.city %> <%= @user.country %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<%= form_tag user_path, method: :get, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>

<div id="map"></div>

<div class="contacts">
  <% if @user.contacts.size > 0 %>
    <h2>Contacts</h2>
    <% for contact in @contacts %>
      <div class="contact">
        <p><%= contact.first_name %> <%= contact.last_name %></p>
        <p><%= contact.street %></p>
        <p><%= contact.postal_code %> <%= contact.city %></p>
        <p><%= contact.country %></p>
        <p><%= contact.email %></p>
        <p>
          <%= link_to("edit", edit_user_contact_path(@user.id, contact.id)) %> 
          <%= link_to("remove", user_contact_path(@user.id, contact.id), method: :delete, data: { confirm: 'Are you sure?' }) %>
        </p>
      </div>
    <% end %>
  <% end %>
</div>
