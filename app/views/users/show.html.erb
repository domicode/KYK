<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<script>
  $(document).ready(function() {
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: { maxZoom: 14 }, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers([
      {      
        "lng": <%= @user.coordinates[0] %>,
        "lat": <%= @user.coordinates[1] %>,
        "picture": {
          "url": "http://maps.google.com/mapfiles/ms/icons/red-dot.png",
          "width":  36,
          "height": 36
        },
        "infowindow": "hello!"
      }
      ]);

      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });
  });

</script>

<p>
  <strong>Own information:</strong>
  <%= @user.first_name %>
  <%= @user.last_name %>
  <%= @user.street %>
  <%= @user.postal_code %> <%= @user.city %> <%= @user.country %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<% if @user.contacts.size > 0 %>
<h2>Contacts</h2>
<% for contact in @user.contacts %>
<p><%= contact.first_name %></p>
<p><%= contact.last_name %></p>
<p><%= contact.street %></p>
<p><%= contact.postal_code %></p>
<p><%= contact.city %></p>
<p><%= contact.country %></p>
<% end %>
<% end %>

<div id="map"></div>

<h2>New contact</h2>
<%= form_for [@user, Contact.new] do |f| %>
<p><%= f.label :first_name %> <%= f.text_field :first_name %></p>
<p><%= f.label :last_name %> <%= f.text_field :last_name %></p>
<p><%= f.label :street %> <%= f.text_field :street %></p>
<p><%= f.label :postal_code %> <%= f.text_field :postal_code %></p>
<p><%= f.label :city %> <%= f.text_field :city %></p>
<p><%= f.label :country %> <%= f.text_field :country %></p>
<p><%= f.submit %></p>
<% end %>
