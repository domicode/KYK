<!DOCTYPE html>
<html>
<head>
  <title>KYK</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="nav">
    <div id="nav-logo">
      <%= link_to "KYK", :root %>
    </div>
    <div id="nav-right">
      <% if current_user %>
        <%= link_to "Edit Profile", edit_user_path(current_user.id) %> |
        <%= link_to "Logout", :logout, method: :post %>
      <% else %>        
        <%= link_to "Login", :login %> |
        <%= link_to "Register", new_user_path %> |
        <%= link_to 'Login with Google', auth_at_provider_path(:provider => :google) %> |
        <%= link_to 'Login with Facebook', auth_at_provider_path(:provider => :facebook) %>
      <% end %>
    </div>
  </div>
  <div id="main">
      <% if current_user %>
      <div class="new-contact">
        <%= link_to "Add a contact", new_user_contact_path(current_user.id) %>
      </div>
      <div class="user-information" id="<%= @current_user.id %>">
        <strong>Own information:</strong>
        <%= current_user.first_name %>
        <%= current_user.last_name %>
        <%= current_user.street %>
        <%= @current_user.postal_code %> <%= current_user.city %> <%= current_user.country %>

        <%= link_to 'Edit', edit_user_path(current_user) %>

        <%= form_tag user_path(current_user), method: :get, id: 'search-form' do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search" %>
        <% end %>
      </div>
    <% end %>

  <div>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
  </div>

  <%= yield %>
  </div>
</body>
</html>
