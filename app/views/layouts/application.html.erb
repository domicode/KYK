<!DOCTYPE html>
<html>
<head>
  <title>KYK</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="nav">
    <% if current_user %>
      <%= link_to "Edit Profile", edit_user_path(current_user.id) %>
      <%= link_to "Logout", :logout, method: :post %>
    <% else %>
      <%= link_to "Register", new_user_path %> |
      <%= link_to "Login", :login %>
      <%= link_to 'Login with google', auth_at_provider_path(:provider => :google) %>
    <% end %>

    <% if current_user %>
      <div class="new-contact">
        <%= link_to "Add a contact", new_user_contact_path(@user.id) %>
      </div>
      <div class="user-information" id="<%= @user.id %>">
        <strong>Own information:</strong>
        <%= @user.first_name %>
        <%= @user.last_name %>
        <%= @user.street %>
        <%= @user.postal_code %> <%= @user.city %> <%= @user.country %>

        <%= link_to 'Edit', edit_user_path(@user) %>

        <%= form_tag user_path(@user), method: :get, id: 'search-form' do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search" %>
        <% end %>
      </div>
    <% end %>

  </div>

  <div>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
  </div>

<%= yield %>

</body>
</html>
